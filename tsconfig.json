{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "declaration": true,
    "allowJs": true,
    "useDefineForClassFields": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
      "./index.ts"
    ]
}
